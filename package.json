{
    "name": "@kjanat/chatlogger-api",
    "private": true,
    "description": "API for storing and retrieving chat interactions",
    "version": "0.2.3",
    "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
    "license": "MIT",
    "main": "dist/server.js",
    "homepage": "https://github.com/kjanat/ChatLogger-API#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/kjanat/ChatLogger-API.git"
    },
    "bugs": {
        "url": "https://github.com/kjanat/ChatLogger-API/issues",
        "email": "dev+issues-chatlogger-api@kjanat.com"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write",
            "npm run test:unit"
        ]
    },
    "scripts": {
        "prepare": "husky",
        "start": "node dist/server.js",
        "build": "tsc && cpy \"src/docs/swagger/**/*.yaml\" \"dist/docs/swagger\" --parents",
        "dev": "nodemon --exec ts-node src/server.ts",
        "test": "jest",
        "integrate": "npm run build && npm run start",
        "test:unit": "jest --config ./tests/jest.unit.config.js --rootDir=.",
        "test:integration": "jest --config ./tests/jest.integration.config.js --rootDir=.",
        "test:coverage": "jest --coverage",
        "version:patch": "node .scripts/version-bump.js patch",
        "version:minor": "node .scripts/version-bump.js minor",
        "version:major": "node .scripts/version-bump.js major",
        "version:prepatch": "node .scripts/version-bump.js prepatch",
        "version:preminor": "node .scripts/version-bump.js preminor",
        "version:premajor": "node .scripts/version-bump.js premajor",
        "version:prerelease": "node .scripts/version-bump.js prerelease",
        "version:alpha": "node .scripts/version-bump.js prerelease --preid=alpha",
        "version:beta": "node .scripts/version-bump.js prerelease --preid=beta",
        "version:rc": "node .scripts/version-bump.js prerelease --preid=rc",
        "docker:build": "node .scripts/docker-build.js",
        "docker:compose": "VERSION=$(node -p \"require('./dist/config/version.js').version\") docker-compose up -d",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "lint:src": "eslint \"src/**/*.{ts,js}\" --ignore-pattern \"src/**/__tests__/**\"",
        "format": "prettier --write \"**/*.{js,ts,json,md,yml,yaml}\"",
        "serve": "serve -s build",
        "generate:secret": "ts-node src/utils/generate-secret.ts",
        "convert:js-to-ts": "node .scripts/convert-to-ts.js"
    },
    "nodemonConfig": {
        "watch": [
            "*.*"
        ],
        "ext": "js,mjs,cjs,json,yaml,yml,ts",
        "ignore": [
            ".git",
            "node_modules",
            "frontend",
            "dist"
        ]
    },
    "keywords": [
        "chatbot",
        "logger",
        "api",
        "mongodb",
        "express",
        "chatlogger"
    ],
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.7",
        "express": "^5.1.0",
        "express-rate-limit": "^7.5.0",
        "helmet": "^8.1.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.13.2",
        "morgan": "^1.10.0",
        "papaparse": "^5.5.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.17.0",
        "yaml": "^2.7.1"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.26.9",
        "@eslint/js": "^9.24.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.14.1",
        "@types/papaparse": "^5.3.15",
        "@types/semver": "^7.7.0",
        "@types/supertest": "^6.0.2",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@typescript-eslint/parser": "^8.30.1",
        "cpy-cli": "^5.0.0",
        "cross-env": "^7.0.3",
        "eslint-config-prettier": "^10.1.2",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint": "^0.8.19",
        "lint-staged": "^15.5.1",
        "mongodb-memory-server": "^10.1.4",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3",
        "semver": "^7.7.1",
        "supertest": "^7.1.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.2"
    }
}
